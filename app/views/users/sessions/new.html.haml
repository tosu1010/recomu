= render 'layouts/header'

.wrapper
  .sign-in
    %h2.sign-in__header
      Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'sign-in__form'}) do |f|
      .sign-in__form__field
        = f.label :email, class: 'sign-in__form__field__label'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-in__form__field__text-field email'
      .sign-in__form__field
        = f.label :password, class: 'sign-in__form__field__label'
        %br/
        = f.password_field :password, autocomplete: "current-password", class: 'sign-in__form__field__text-field password'
      - if devise_mapping.rememberable?
        .sign-in__form__field
          = f.check_box :remember_me
          = f.label :remember_me
      .sign-in__form__action
        = f.submit "Log in", class: 'sign-in__form__action__submit'
    = render "users/shared/links"
