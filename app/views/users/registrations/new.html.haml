= render 'layouts/header'

.wrapper
  .sign-up
    %h2.sign-up__header
      Sign Up
    = form_with model: @user, url: user_registration_path, id: "new_user", class: "sign-up__form", local: true do |f|
      = render "devise/shared/error_messages", resource: resource
      .sign-up__form__field
        = f.label :nickname, class: 'sign-up__form__field__label'
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: 'sign-up__form__field__text-field nickname'
      .sign-up__form__field
        = f.label :email, class: 'sign-up__form__field__label'
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: 'sign-up__form__field__text-field email'
      .sign-up__form__field
        = f.label :password, class: 'sign-up__form__field__label'
        - if @minimum_password_length
          %em
            (6 or more characters)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: 'sign-up__form__field__text-field password'
      .sign-up__form__field
        = f.label :password_confirmation, class: 'sign-up__form__field__label'
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: 'sign-up__form__field__text-field password'
      .sign-up__form__aciton
        = f.submit "Sign up", class: 'sign-up__form__action__submit'
        
    = render "users/shared/links"
