= render partial: 'header'

.review-top
  .reviews
    - @review.each do |review|
      = link_to review_path(review) do
        .review
          .review__album-title
            = review.album.title
          .review__artist-name
            = review.album.artist.name
          .review__content
            = review.content

= render partial: 'layouts/post'