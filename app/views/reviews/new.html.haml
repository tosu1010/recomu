.create-review
  = form_with url: reviews_path, class: "review-form" do |f|
    .review-form__artist
      = f.label :album, "アーティスト名", class: "review-form__label"
      = f.text_field :artist, class: "review-form__text-field"
    .review-form__album
      = f.label :album, "アルバム名", class: "review-form__label"
      = f.text_field :album, class: "review-form__text-field"
    .review-form__review
      = f.label :review, "レビュー",class: "review-form__label"
      = f.text_area :review, class: "review-form__text-area"
    .review-form__tag
      = f.label :"tags[]", "タグ", class: "review-form__label"
      = f.text_field :"tags[]", class: "review-form__text-field--tag"
    .tags-incremental

    = f.submit "投稿", class: "review-form__submit"

= flash[:success]
= flash[:failed]