= render partial: 'layouts/header'

.wrapper
  .create-review
    .create-review__header
      Post Review
    = form_with url: reviews_path, class: "review-form" do |f|
      .review-form__artist
        = f.label :artist, "Artist", class: "review-form__label"
        = f.text_field :artist, class: "review-form__text-field"
      .review-form__album
        = f.label :album, "Album / Single", class: "review-form__label"
        = f.text_field :album, class: "review-form__text-field"
      .review-form__tag
        = f.label :"tags[]", "Tags", class: "review-form__label", for: 'tag-field'
        .review-form__tag__container
          = f.text_field :"tags[]", class: "review-form__text-field--tag", id: 'tag-field'
          .tags-incremental

      .review-form__tag__add-button
        = button_tag 'Add Tag', type: 'button', class: 'tag-button--add', id: 'tag-add-button'

      .review-form__review
        = f.label :review, "Review",class: "review-form__label"
        = f.text_area :review, class: "review-form__text-area"

      = f.submit "Post", class: "review-form__submit"